@model CV.Models.Entity.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateSocialMedia</h2>

<div class="container">
    <form method="post">
        @Html.Label("Social Media ID")
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @disabled = "disabled" })
        <br />
        @Html.Label("Sosyal Medya İsmi")
        @Html.TextBoxFor(x => x.SocialMediaName, new { @class = "form-control" })
        <br />
        @Html.Label("Sosyal Medya Linki")
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
        <br />
        @Html.Label("Sosyal Medya Icon")
        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </form>
</div>