@model List<CV.Models.Entity.Interests>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Güncelleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Description1">@item.Description1</textarea>
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
        <br />
        <button class="btn btn-outline-info">Güncelle</button>
    }
</form>

