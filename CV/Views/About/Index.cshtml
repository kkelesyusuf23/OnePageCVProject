@model List<CV.Models.Entity.Abouts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" class="form-control" name="Name" value="@item.Name" />
        <br />
        <label>Soyad</label>
        <input type="text" class="form-control" name="Surname" value="@item.Surname" />
        <br />
        <label>Address</label>
        <input type="text" class="form-control" name="Address" value="@item.Address" />
        <br />
        <label>Telefon</label>
        <input type="text" class="form-control" name="Telefon" value="@item.Telefon" />
        <br />
        <label>Mail</label>
        <input type="text" class="form-control" name="Mail" value="@item.Mail" />
        <br />
        <label>Resim</label>
        <input type="text" class="form-control" name="Image" value="@item.Image" />
        <br />
        <label>Açıklama</label>
        <textarea rows="5" class="form-control" name="Description">@item.Description</textarea>
        <br />
        <button class="btn btn-outline-info">Güncelle</button>
    }
</form>

