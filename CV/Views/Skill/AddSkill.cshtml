@model CV.Models.Entity.Skills
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Yetenek Ekleme Sayfası</h2>


<div class="container">
    <form method="post">
        @Html.Label("Yetenek")
        @Html.TextBoxFor(x => x.Skill, new { @class = "form-control" })
        <br />
        @Html.Label("Oran")
        @Html.TextBoxFor(x => x.Progress, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Kaydet</button>
    </form>
</div>